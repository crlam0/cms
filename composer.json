{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.0.0",
        "twig/twig": "^2.4",
        "stormiix/laravel-mix-twig-extension": "dev-master",
        "robmorgan/phinx": "^0.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "filp/whoops": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Classes\\": "include/classes/",
            "modules\\": "modules/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "phinx": "vendor/bin/phinx"
    }
}
