<form action="{{ action }}" method="POST">
    <input type="hidden" name="id" value="{{ model.id }}">
    <table width=500  class="table table-striped table-responsive table-bordered normal-form" align="center">
        <tr class=header><td colspan="2">{{ form_title }}</td></tr>
        <tr class="content" align="left"><td>{{ model.label('author') }}:</td><td><input class="form-control" type="edit" name="form[author]" value="{{ model.author }}"></td></tr>
        <tr class="content" align="left"><td>{{ model.label('email') }}:</td><td><input class="form-control" type="edit" name="form[email]" value="{{ model.email }}"></td></tr>
        <tr class="content"><td align="left" colspan="2">
            <textarea class="form-control" name="form[content]" rows="5" cols="12" maxlength="64000">{{ model.content }}</textarea>
        </td></tr>
        <tr class=header align="left"><td align="center" colspan="2">                
            <input class="btn btn-primary" type="submit" name="update" value="{% if action == 'create' %}Добавить{% else %}Обновить{% endif %}"> 
        </td></tr>
    </table>
</form>
<br>
<center>
    <a href="{{ this.base_url }}" class="btn btn-default"><< Назад</a>
</center>

