<form action="{{ this.base_url }}{{ action }}" method="POST">
    <input type="hidden" name="id" value="{{ model.id }}">
    <table width=500  class="table table-striped table-responsive table-bordered normal-form" align="center">
        <tr class=header><td colspan="2">{{ form_title }}</td></tr>
        <tr class="content" align="left"><td>{{ model.label('name') }}:</td><td><input class="form-control" type="edit" maxlength="255" size="64" name="form[name]" value="{{ model.name }}"></td></tr>
        <tr class="content" align="left"><td>{{ model.label('comment') }}:</td><td><input class="form-control" type="edit" maxlength="255" size="64" name="form[comment]" value="{{ model.comment }}"></td></tr>
        <tr class="content" align="left"><td>{{ model.label('uri') }}:</td><td><input class="form-control" type="edit" maxlength="255" size="64" name="form[uri]" value="{{ model.uri }}"></td></tr>
        <tr class="content" align="left"><td>{{ model.label('file_name') }}:</td><td><input class="form-control" type="edit" maxlength="255" size="64" name="form[file_name]" value="{{ model.file_name }}"></td></tr>
        <tr class="content" align="left"><td>{{ model.label('template_type') }}:</td><td>
                <select class="form-control" name="form[template_type]">
                    <option value="my" {% if model.template_type is same as ('my') %}selected{% endif %}>My</option>
                    <option value="twig" {% if model.template_type is same as ('twig') %}selected{% endif %}>Twig</option>
                </select>
            </td></tr>
        <tr class="content"><td align="left" colspan="2">
                <textarea class="form-control" id="editor_html" name="form[content]" rows="25" cols="120" maxlength="64000">{{ model.content }}</textarea>
            </td></tr>
        <tr class=header align="left"><td align="center" colspan="2">
                {% if action == 'create' %}
                    <input class="btn btn-primary" type="submit" name="update" value="  Добавить  ">
                {% else %}
                    <input class="btn btn-primary" type="submit" name="update" value="  Сохранить  "> 
                    <input class="btn btn-primary" type="submit" name="update_and_exit" value="  Сохранить и выйти ">
                    <input class="btn btn-primary" type="submit" name="revert" value="  Вернуть исходный  "> 
                {% endif %}
            </td></tr>
    </table>
</form>
<br>
<center>
    <a href="{{ this.base_url }}" class="btn btn-default"><< Назад</a>
</center>

