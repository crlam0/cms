{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.0.0",
        "monolog/monolog": "^2.1",
        "robmorgan/phinx": "^0.10",
        "stormiix/laravel-mix-twig-extension": "dev-master",
        "swiftmailer/swiftmailer": "^6.0",
        "twig/twig": "^2.4"
    },
    "require-dev": {
        "filp/whoops": "^2.2",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "classes\\": "include/classes/",
            "modules\\": "modules/",
            "admin\\": "admin/",
            "local\\": "local/classes/",
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "phinx": "vendor/bin/phinx"
    }
}
